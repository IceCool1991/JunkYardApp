<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="383dp"
        android:layout_height="214dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/carImage"
            android:layout_width="110dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/cardName"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/whale" />

        <TextView
            android:id="@+id/carBrandLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="5dp"
            android:text="Marca"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/carModelLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:text="Modelo:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carYearLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="55dp"
            android:text="AÃ±o:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carVinLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="80dp"
            android:text="Bastidor:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"
            android:text="ford"
            android:textSize="18sp"
            tools:layout_editor_absoluteX="109dp"
            tools:layout_editor_absoluteY="365dp" />

        <TextView
            android:id="@+id/carModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="30dp"
            android:text="focus"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="55dp"
            android:text="2013"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/carVin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="80dp"
            android:text="00000000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/junkYard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="110dp"
            android:text="Desguace"
            android:textSize="30sp"
            android:textStyle="bold|italic" />


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>